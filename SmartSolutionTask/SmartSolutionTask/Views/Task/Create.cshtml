@model TaskViewModel

@{
    Layout = null;
    var workerUsers = Model?.WorkerUsers;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body> 
<hr /> 
    <div class="container">
        <h4 style="text-align:center">Create Task</h4>
        <div class="col-md-4">
            <form asp-action="Create" asp-controller="Task">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Title</label>
                    <input type="text"  asp-for="@Model.Title" class="form-control" id="exampleFormControlInput1">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea2">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" id="exampleFormControlTextarea2" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput3">Deadline</label>
                    <input type="date" asp-for="@Model.Deadline" class="form-control" id="exampleFormControlInput3">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect4">Developer List</label>
                    <select asp-for="@Model.UserIds" class="form-control" id="exampleFormControlSelect4">
                        @if (workerUsers != null)
                        {
                            @foreach (var user in workerUsers)
                            {
                                <option value="@user.Id">@user.Name @user.Surname</option>
                            }
                        } 
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Create Task</button>
            </form>
        </div>
    </div>  
</body>
</html>
